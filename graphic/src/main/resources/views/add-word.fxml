<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: #D3D3D3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.graphic.controllers.AddWordController">
    <children>
        <VBox layoutX="64.0" layoutY="40.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="%word" />
                                <TextField fx:id="wordTextField" prefWidth="220.0" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="%pronounce" />
                                <TextField fx:id="pronounTextField" prefWidth="220.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label text="%explain" />
                <HBox>
                    <children>
                        <Button fx:id="addTypeButton" mnemonicParsing="false" onAction="#onClickAddTypeButton" style="-fx-background-color: #4876FF;" styleClass="btn" text="%add_word_type">
                            <HBox.margin>
                                <Insets bottom="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <ScrollPane prefHeight="545.0" prefWidth="680.0">
                    <content>
                        <VBox fx:id="editVbox" spacing="5.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onClickSaveButton" styleClass="btn">
                     <graphic>
                        <FontAwesomeIconView glyphName="SAVE" size="20" styleClass="ikonli-font-icon" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="%save_word" />
                     </tooltip></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
